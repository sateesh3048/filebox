<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
  <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
  </a>
  <ul class="nav  nav-pills col-12 col-md-auto mb-2 justify-content-center mb-md-0">
    <%if user_signed_in? %>
      <li class="nav-item"><%= link_to "Files",documents_path, class: "nav-link   px-4 link-dark #{active_class('documents')}" %></li>
    <% else %>
      <li class="nav-item"><%= link_to "Home",home_path, class: "nav-link   px-4 link-dark #{active_class('home', 'show')}" %> </li>
      <li class="nav-item"><a href="#" class="nav-link px-4 link-dark">FilesDemo</a></li>
    <% end %>
    <li class="nav-item"><%= link_to "About",about_home_path, class: "nav-link   px-4 link-dark #{active_class('home', 'about')}" %> </li>
    <li class="nav-item"><a href="#" class="nav-link px-4 link-dark">Pricing</a></li>
    <li class="nav-item"><a href="#" class="nav-link px-4 link-dark">FAQs</a></li>
  </ul>
  <div class="col-md-3 text-end">
    <%if user_signed_in? %>
      <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete },class: "btn btn-outline-primary me-2" %>
    <% else %>
      <%= link_to "Login", new_user_session_path,class: "btn btn-outline-primary me-2" %>
      <%= link_to "Sign-up", new_user_registration_path, data: { "turbo-method": :delete },class: "btn btn-outline-primary me-2" %>
    <% end %>
  </div>
</header>
