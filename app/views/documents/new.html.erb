<div class="row">
  <div class="col-sm-12">
    <h3 class="display-4 text-center"> New Document</h3>
  </div>
</div>
<%= form_with model: @new_document do |form|%>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Title</label>
    <div class="col-sm-10">
      <%= form.text_field :title, placeholder: "Title", class: "form-control" %>
    </div>
  </div>
  <div class="form-group mt-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
      <%= form.text_area :description, placeholder: "Description", class: "form-control" %>
    </div>
  </div>
  <div class="form-group mt-3">
    <label for="exampleFormControlFile1" class="col-sm-2 col-form-label">Upload file</label>
    <div class="col-sm-10">
      <%= form.file_field :file , class: "form-control form-control-file" %>
    </div>
  </div>
  <div class="form-group mt-3">
    <div class="col-sm-12">
      <%= form.submit class: "btn btn-success" %>
      <%= link_to "Cancel", documents_path, class: "btn btn-secondary"%>
    </div>
  </div>
<% end %>
